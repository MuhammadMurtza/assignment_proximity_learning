<%= turbo_frame_tag :modal do %>
  <div class="modal fade" id="new-data-modal" tabindex="-1" aria-labelledby="newItemRemoteModalLabel" aria-hidden="true" data-controller="edit-modal" data-action="turbo:submit-end->edit-modal#submitEnd">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Edit Employment</h5>
        </div>
        <div class="modal-body">
          <div id="replaced">
            <%= render "form", employment: @employment %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
